<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.AudioListFragment">


<LinearLayout
    android:id="@+id/audioplayer_logo"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:gravity="center"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    >

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@color/cardview_dark_background"/>


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/audioplayer_logo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical">

            <SeekBar
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:progressBackgroundTint="@color/white"
                android:progress="50"
                android:thumb="@drawable/thumb"
                android:progressTint="@color/yellow"
                />


        </LinearLayout>




        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageButton
                android:id="@+id/player_prev"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:foreground="@drawable/ic_player_prev"
                android:backgroundTint="@color/white"/>

            <ImageButton
                android:id="@+id/player_play"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="22dp"
                android:background="@drawable/ic_player_play"
                android:backgroundTint="@color/yellow" />

            <ImageButton
                android:id="@+id/player_next"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="22dp"
                android:foreground="@drawable/ic_player_next"
                android:backgroundTint="@color/white"/>


        </LinearLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>